#include <glog/logging.h>
#include "ldd/proxy/proxy.h"
#include "c2p_list.h"
#include "p2s_list.h"

using namespace ldd::net;

C2PList::C2PList(Proxy *proxy) 
    : proxy_(proxy)
      , hash_val_(0)
      , namespace_id_(0)
      , bucket_id_(0)
      , farm_id_(0)
      , p2s_list_(NULL)
{
}

C2PList::~C2PList()
{
}

bool C2PList::ParseFrom(const Buffer &buff, const std::map<int8_t, Buffer>& extras)
{
    //(1).处理请求
    LOG(INFO) << "recv get mesasge, len=" << buff.len(); 
    if (!req_.ParseFrom(buff.ptr(), buff.len())) {
        LOG(ERROR) << "parse body fo get message error";
        return false;
    }
    else {
        LOG(INFO) << "Parse Ok" 
            << ", namespace=" << req_.name_space_.data()
            << "key=" << req_.key_.data()
            << "limit=" << req_.u32limit_
            << "position=" << req_.u8position_;
    }

    int namespace_id_ = proxy_->GetNameSpaceID(req_.name_space_.data());
    LOG(INFO) << "namespace id=" << namespace_id_;

    std::size_t hash_val_ = proxy_->GetHashValue(req_.key_);
    int bucket_id = proxy_->GetBucketID(hash_val_);
    if (bucket_id == -1) {
        LOG(ERROR) << "get bucket id error, key=" 
            << req_.key_.data();
        return false;
    }

    int farm_id = proxy_->GetFarmID(bucket_id);
    if (farm_id == -1) {
        LOG(ERROR) << "get farm id error, key=" 
            << req_.key_.data();
    }

    SendRequest();

    return true;
}

void C2PList::HandleCancel()
{
    LOG(INFO) << "HandleCancel called";
    if (p2s_list_ != NULL) {
        p2s_list_.Load()->Cancel();
    }
}

void C2PList::SendResult()
{
    //构造响应包
    Buffer data(res_.MaxSize());
    int len = res_.SerializeTo(data.ptr());
    data.ReSize(len);

    //发送响应
    bool ret = Respond(data);
    if (!ret) {
        LOG(ERROR) << "send response to client failed";
    }

    if (res_.s64Version_ < 0) {
        Finalize();
    }
}

void C2PList::SendRequest()
{
    p2s_list_ = new P2SList(this);
    p2s_list_.Load()->req_.u16Ns_ = namespace_id_;
    p2s_list_.Load()->req_.key_ = req_.key_;
    p2s_list_.Load()->req_.u32limit_ = req_.u32limit_;
    p2s_list_.Load()->req_.u8position_ = req_.u8position_;

    //设置发送超时时间
    p2s_list_.Load()->set_conn_timeout(1000);
    p2s_list_.Load()->set_send_timeout(1000);
    p2s_list_.Load()->set_recv_timeout(2000);

    boost::shared_ptr<Channel> channel = proxy_->GetReadChannel(hash_val_
            , farm_id_);
    channel->Send(p2s_list_);
}

